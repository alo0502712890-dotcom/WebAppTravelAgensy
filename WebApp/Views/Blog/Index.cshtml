@using WebApp.Entity
@using WebApp.ViewModels
@{
    var viewModel = (BlogViewModel)Model;
}

<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h3 class="text-white display-3 mb-4">
            Наш Блог</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="index.html">Головна</a></li>
                <li class="breadcrumb-item active text-white">Блог</li>
            </ol>
    </div>
</div>
<!-- Header End -->
<!-- Blog Start -->
<div class="container-fluid py-5 wow fadeInUp">
    <div class="container py-5">
        <div class="row g-5">
            <!-- Blog list Start -->
            <div class="col-lg-8">
                <div class="row g-5">

                    @foreach (Post onePost in viewModel.Posts)
                    {
                        <div class="col-md-6 wow slideInUp">
                            <div class="blog-item">
                                <div class="blog-img">
                                    <img class="img-fluid" src="@onePost.ImgSrc" alt="@onePost.Name">
                                </div>
                                <div class="blog-content border border-top-0 rounded-bottom p-4">
                                    <div class="d-flex mb-3">
                                        <small class="me-3"><i class="far fa-user text-primary me-2"></i>John Doe</small>
                                        <small><i class="far fa-calendar-alt text-primary me-2"></i>@onePost.DateOfPublished.ToShortDateString()</small>
                                    </div>
                                    <h4 class="h4">@onePost.Name</h4>
                                    <p class="my-3">@onePost.ShortDescription</p>
                                    <a class="btn btn-primary rounded-pill py-2 px-4" href="/blog/post?slug=@onePost.Slug">Дізнатись більше...<i class="bi bi-arrow-right"></i></a>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="col-12 wow slideInUp" data-wow-delay="0.1s">
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-lg m-0">
                                <!-- Prev -->
                                <li class="page-item @(viewModel.CurrentPage == 1 ? "disabled" : "")">
                                    <a class="page-link rounded-0"
                                       href="/blog/index?page=@(viewModel.CurrentPage - 1)@(viewModel.CategorySlug != null ? $"&category={viewModel.CategorySlug}" : "")@(viewModel.TagSlug != null ? $"&tag={viewModel.TagSlug}" : "")">
                                        <i class="bi bi-arrow-left"></i>
                                    </a>
                                </li>

                                @for (int i = 1; i <= viewModel.TotalPages; i++)
                                {
                                    <li class="page-item @(i == viewModel.CurrentPage ? "active" : "")">
                                        <a class="page-link"
                                           href="/blog/index?page=@i@(viewModel.CategorySlug != null ? $"&category={viewModel.CategorySlug}" : "")@(viewModel.TagSlug != null ? $"&tag={viewModel.TagSlug}" : "")">
                                            @i
                                        </a>
                                    </li>
                                }

                                <!-- Next -->
                                <li class="page-item @(viewModel.CurrentPage == viewModel.TotalPages ? "disabled" : "")">
                                    <a class="page-link rounded-0"
                                       href="/blog/index?page=@(viewModel.CurrentPage + 1)@(viewModel.CategorySlug != null ? $"&category={viewModel.CategorySlug}" : "")@(viewModel.TagSlug != null ? $"&tag={viewModel.TagSlug}" : "")">
                                        <i class="bi bi-arrow-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Blog list End -->
            <!-- Sidebar Start -->
            <div class="col-lg-4">
                <!-- Search Form Start -->
                <div class="mb-5">
                    <div class="input-group">
                        <input type="text" class="form-control p-3" placeholder="Keyword">
                        <button class="btn btn-primary px-4"><i class="bi bi-search"></i></button>
                    </div>
                </div>
                <!-- Search Form End -->
                <!-- Category Start -->
                <div class="mb-5">
                    <div class="section-title section-title-sm no-line position-relative pb-3 mb-4">
                        <h3 class="mb-0">Категорії</h3>
                    </div>

                    <div class="link-animated d-flex flex-column justify-content-start">
                        @foreach (Category parentCategory in viewModel.Categories)
                        {
                            <a class="h5 fw-semi-bold bg-light rounded py-2 px-3 mb-2" href="/blog/index?category=@parentCategory.Slug">
                                <i class="bi bi-arrow-right me-2"></i>@parentCategory.Name
                            </a>
                            @foreach (Category child in parentCategory.Childs)
                            {
                                <a class="h5 fw-semi-bold bg-light rounded py-2 px-5 mb-2" href="/blog/index?category=@child.Slug">
                                    <i class="bi bi-arrow-right me-2"></i>@child.Name
                                </a>
                            }
                        }
                    </div>
                </div>
                <!-- Category End -->
                <!-- Image Start -->
                <div class="mb-5">
                    <img src="img/blog-1.jpg" alt="" class="img-fluid rounded">
                </div>
                <!-- Image End -->
                <!-- Tags Start -->
                <div class="mb-5">
                    <div class="section-title section-title-sm no-line position-relative pb-3 mb-4">
                        <h3 class="mb-0">Тегі</h3>
                    </div>
                    <div class="d-flex flex-wrap m-n1">
                        @foreach (Tag oneTag in viewModel.Tags)
                        {
                            <a href="/blog/index?tag=@oneTag.Slug" class="btn btn-light m-1">@oneTag.Name</a>
                        }
                    </div>
                </div>
                <!-- Tags End -->
            </div>
            <!-- Sidebar End -->
        </div>
    </div>
</div>
<!-- Blog End -->
<!-- Subscribe Start -->
<div class="container-fluid subscribe py-5">
    <div class="container text-center py-5">
        <div class="mx-auto text-center" style="max-width: 900px;">
            <h5 class="subscribe-title px-3">Subscribe</h5>
            <h1 class="text-white mb-4">Our Newsletter</h1>
            <p class="text-white mb-5">
                Lorem ipsum dolor sit amet consectetur adipisicing elit. Laborum tempore nam, architecto doloremque velit explicabo? Voluptate sunt eveniet fuga eligendi! Expedita laudantium fugiat corrupti eum cum repellat a laborum quasi.
            </p>
            <div class="position-relative mx-auto">
                <input class="form-control border-primary rounded-pill w-100 py-3 ps-4 pe-5" type="text" placeholder="Your email">
                <button type="button" class="btn btn-primary rounded-pill position-absolute top-0 end-0 py-2 px-4 mt-2 me-2">Subscribe</button>
            </div>
        </div>
    </div>
</div>
<!-- Subscribe End -->
