@model WebApp.ViewModels.RegisterViewModel

<form class="card-body flex flex-col gap-5 p-10" id="sign_up_form" method="post" autocomplete="off" asp-action="RegisterIn" asp-controller="Account">
    <div class="text-center mb-2.5">
        <h3 class="text-lg font-medium text-gray-900 leading-none mb-2.5">
            Реєстрація
        </h3>

        <div class="flex items-center justify-center">
            <span class="text-2sm text-gray-700 me-1.5">
                У Вас вже є Аккаунт?
            </span>
            <a class="text-2sm link" href="/Account/loginIn">
                Увійти
            </a>
        </div>
    </div>
    
    <div class="grid grid-cols-2 gap-2.5">
        <a class="btn btn-light btn-sm justify-center" href="/Account/GoogleLogin">
            <img alt="" class="size-3.5 shrink-0" src="~/assets/media/brand-logos/google.svg" />
            Use Google
        </a>
        <a class="btn btn-light btn-sm justify-center" href="#">
            <img alt="" class="size-3.5 shrink-0 dark:hidden" src="~/assets/media/brand-logos/apple-black.svg" />
            <img alt="" class="size-3.5 shrink-0 light:hidden" src="~/assets/media/brand-logos/apple-white.svg" />
            Use Apple
        </a>
    </div>
    
    <div class="flex items-center gap-2">
        <span class="border-t border-gray-200 w-full"></span>
        <span class="text-2xs text-gray-600 uppercase">or</span>
        <span class="border-t border-gray-200 w-full"></span>
    </div>
    
    <div class="flex flex-col gap-1">
        <label class="form-label text-gray-900" asp-for="Email"></label>
        <input class="input" asp-for="Email" placeholder="email@email.com" type="email" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
    </div>
    
    <div class="flex flex-col gap-1">
        <label class="form-label text-gray-900" asp-for="Login"></label>
        <input class="input" asp-for="Login" placeholder="Логін" type="text" />
        <span asp-validation-for="Login" class="text-red-500 text-sm"></span>
    </div>
    
    <div class="flex flex-col gap-1">
        <label class="form-label font-normal text-gray-900" asp-for="Password"></label>
        <div class="input" data-toggle-password="true">
            <input asp-for="Password" type="password" placeholder="Пароль" />
            <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
            </button>
        </div>
        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
    </div>
    
    <div class="flex flex-col gap-1">
        <label class="form-label font-normal text-gray-900" asp-for="ConfirmPassword"></label>
        <div class="input" data-toggle-password="true">
            <input asp-for="ConfirmPassword" type="password" placeholder="Повторіть пароль" />
            <button class="btn btn-icon" data-toggle-password-trigger="true" type="button">
                <i class="ki-filled ki-eye text-gray-500 toggle-password-active:hidden"></i>
                <i class="ki-filled ki-eye-slash text-gray-500 hidden toggle-password-active:block"></i>
            </button>
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
    </div>
    
    <label class="checkbox-group">

        <input class="checkbox checkbox-sm" asp-for="Check" type="checkbox" value="true" />
        <span class="checkbox-label">
            Я погоджуюсь
            <a class="text-2sm link" href="#">Terms & Conditions</a>
        </span>
    </label>
    <span asp-validation-for="Check" class="text-red-500 text-sm"></span>

    @if (ViewData.ModelState[""]?.Errors.Any() == true)
    {
        <div class="alert alert-danger mb-4 p-3 rounded-md text-red-700 bg-red-100 font-medium">
            @foreach (var error in ViewData.ModelState[""].Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }


    <button type="submit" class="btn btn-primary flex justify-center grow">
        Зареєструватись
    </button>

        <div class="flex items-center gap-2">
        <span class="border-t border-gray-200 w-full"></span>
        <span class="text-2xs text-gray-600 uppercase">or</span>
        <span class="border-t border-gray-200 w-full"></span>
    </div>

    <div class="text-center">
        <a href="/Account/RegisterByPhone"
           class="inline-flex items-center gap-2 text-sm text-primary hover:underline">
            <i class="fa fa-phone"></i>
            Зареєструватись за номером телефону
        </a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}