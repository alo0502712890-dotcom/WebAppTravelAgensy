@{
    ViewData["Title"] = "Доступ заборонено";
}

<div class="container py-5 access-denied-page">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">

            <div class="card shadow-sm border-0">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex align-items-start gap-3">
                        <div class="access-denied-icon">🚫</div>

                        <div>
                            <h1 class="h4 mb-2">Доступ заборонено</h1>
                            <p class="text-muted mb-4">
                                У вас немає прав для перегляду цієї сторінки.
                            </p>

                            <div class="d-flex flex-wrap gap-2">
                                <a class="btn btn-primary" href="@Url.Action("Index","Home")">
                                    На головну
                                </a>

                                <a class="btn btn-outline-secondary" href="@Url.Action("LoginIn","Account", new { ReturnUrl = Context.Request.Query["ReturnUrl"].ToString() })">
                                    Увійти іншим акаунтом
                                </a>
                            </div>

                            @if (!string.IsNullOrWhiteSpace(Context.Request.Query["ReturnUrl"]))
                            {
                                <div class="mt-3 small text-muted">
                                    Сторінка: <code>@Context.Request.Query["ReturnUrl"]</code>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
